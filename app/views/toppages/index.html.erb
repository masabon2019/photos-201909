<h1>写真一覧</h1>

<% if logged_in? %>

  <div class="row">

  <% @photos.each do |photo| %>
    <div class="col-sm-3">
      <a href="<%= photo_path(photo.id) %>">
      <img src="<%= photo.image.url %>" style="width:100%;">
      </a>
      <p><%= link_to photo.user.name, user_path(photo.user) %></p>
      <%= render 'bookmarks/bookmark_button', photo: photo %>
      <%= render 'goods/good_button', photo: photo %>

    </div>
  <% end %>
  </div>

<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Photos</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>

  
  <div class="row">
  <% @photos.each do |photo| %>
    <div class="col">
      <img src="<%= photo.image.url %>" style="width:240px;"><br>
      <%= photo.user.name %>
    </div>
  <% end %>
  </div>
<% end %>