
<% if current_user.bookmarking?(photo) %>
  <%= form_with(model: current_user.bookmarks.find_by(photo_id: photo.id), remote: true, method: :delete) do |f| %>
    <%= hidden_field_tag :photo_id, photo.id %>

    <%= button_tag(type: "submit", class: "btn btn-default") do %>
    <%= embedded_svg("icon_star.svg", class: "icon_star-on") %>

      <span class="bookmarkCount"><%= photo.bookmarks.count %></span>
    </span>
    <% end %>


  <% end %>
<% else %>
  <%= form_with(model: current_user.bookmarks.build, remote: true) do |f| %>
    <%= hidden_field_tag :photo_id, photo.id %>

    <%= button_tag(type: "submit", class: "btn btn-default") do %>
    <%= embedded_svg("icon_star.svg", class: "icon_star-off") %>
    <span class="bookmarkCount"><%= photo.bookmarks.count %></span>
    <% end %>
  <% end %>
<% end %>
