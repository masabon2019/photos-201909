
<% if current_user.bookmarking?(photo) %>
  <%= form_with(model: current_user.bookmarks.find_by(photo_id: photo.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :photo_id, photo.id %>
    <%= f.submit 'Unbookmark', class: 'btn btn-outline-secondary btn-sm' %>

  <% end %>
<% else %>
  <%= form_with(model: current_user.bookmarks.build, local:true) do |f| %>
    <%= hidden_field_tag :photo_id, photo.id %>
    <%= f.submit 'Bookmark', class: 'btn btn-outline-primary btn-sm' %>

  <% end %>
<% end %>
