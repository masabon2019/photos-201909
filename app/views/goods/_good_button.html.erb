<% if current_user.goodpress?(photo) %>
  <%= form_with(model: current_user.goods.find_by(photo_id: photo.id), method: :delete, remote: true) do |f| %>
    <%= hidden_field_tag :photo_id, photo.id %>
    <%= button_tag(type: "submit", class: "btn btn-default btnOutline") do %>
    <%= embedded_svg("icon_thumbsup.svg", class: "icon_thumbsup-on") %>
    <span class="goodCount"><%= photo.goods.count %></span>
    <% end %>
  <% end %>

<% else %>
  <%= form_with(model: current_user.goods.build, remote: true) do |f| %>
    <%= hidden_field_tag :photo_id, photo.id %>
    <%= button_tag(type: "submit", class: "btn btn-default btnOutline") do %>
    <%= embedded_svg("icon_thumbsup.svg", class: "icon_thumbsup-off") %>
    <span class="goodCount"><%= photo.goods.count %></span>
    <% end %>
  <% end %>
<% end %>
