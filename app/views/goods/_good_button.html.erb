
<div id="goodBtn__area" style="background-color: #f9f9f9 ;height:100px;">

  <% if current_user.goodpress?(photo) %>
    <%= form_with(model: current_user.goods.find_by(photo_id: photo.id), method: :delete, remote: true) do |f| %>
      <%= hidden_field_tag :photo_id, photo.id %>
      <%= button_tag(type: "submit", class: "btn btn-default") do %>
          <i class="fas fa-thumbs-up"></i>
          <span class="badge badge-primary"><%= photo.goods.count %></span>
      <% end %>

    <% end %>
  <% else %>
    <%= form_with(model: current_user.goods.build, remote: true) do |f| %>
      <%= hidden_field_tag :photo_id, photo.id %>
      <%= button_tag(type: "submit", class: "btn btn-default") do %>
          <i class="far fa-thumbs-up"></i>
          <span class="badge badge-secondary"><%= photo.goods.count %></span>
      <% end %>
    <% end %>
  <% end %>

</div>
