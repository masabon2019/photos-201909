<% if users.any? %>
<div class="row">
    <% users.each do |user| %>
    <div class="col-sm-3">
      <img src="<%= user.prof_image.url %>" style="width:240px;"><br>
      <p><%= user.self_introduction %></p>
      <%= user.name %>
      <p><%= link_to 'View profile', user_path(user) %></p>
    </div>
    <% end %>
  <%= paginate users %>
  </div>
<% end %>