<h1>お気に入り</h1>

<div class="row">
  <div class="col-sm-3">
    <img src="<%= @user.prof_image.url %>" style="width:240px;">
    
    <!--フォローボタン-->
    <%= render 'relationships/follow_button', user: @user %>

  </div>
  <div class="col-sm-4 word-wrap">
    <p>name: <%= @user.name %></p>
    <p>equipment: <%= @user.equipment %></p>
    <p>genre: <%= @user.genre %></p>
    <p>URL: <%= @user.url %></p>
  </div>
  <div class="col-sm-5 word-wrap">
    introduction: <%= @user.self_introduction %>
  </div>
</div>


<div class="row">
  <div class="col-sm-12">
    <ul class="nav nav-tabs nav-justified mb-3">
      <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link <%= 'active' if current_page?(user_path(@user)) %>">Photos <span class="badge badge-secondary"><%= @count_photos %></span></a></li>
      <li class="nav-item"><a href="<%= bookmarkings_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(bookmarkings_user_path(@user)) %>">Bookmarks <span class="badge badge-secondary"><%= @count_bookmarks %></span></a></li>
      <li class="nav-item"><a href="<%= followings_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(followings_user_path(@user)) %>">Followings <span class="badge badge-secondary"><%= @count_followings %></span></a></li>
      <li class="nav-item"><a href="<%= followers_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(followers_user_path(@user)) %>">Followers <span class="badge badge-secondary"><%= @count_followers %></span></a></li>
    </ul>

  </div>
</div>

<div class="row">
  <% @bookmarks.each do |bookmark| %>
    <div class="col-sm-3">
      <a href="<%= photo_path(bookmark.id) %>"><img src="<%= bookmark.image.url %>" style="width:240px;"></a>
      <p><%= link_to bookmark.user.name, user_path(bookmark.user) %></p>
      <%= render 'bookmarks/bookmark_button', photo: bookmark %>
    <%= render 'goods/good_button', photo: bookmark %>
    </div>
  <% end %>

</div>
    <%= paginate @bookmarks %>
