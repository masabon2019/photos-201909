<div class="row">
 <div class="col-sm-12">
   <div class="">
    <div class="postimage__wrapper">
      <img src="<%= @photo.image.url %>">
    </div>
  </div>
  <% if current_user == @photo.user %>
  <div class="postImgEvaluationBtns__wrapper">
  </div>
  <% else %>

  <div class="postImgEvaluationBtns__wrapper">

    <div id="goodBtn__area" class="btnId<%= @photo.id %>">
    <%= render 'goods/good_button', photo: @photo %>
    </div>

    <div id="bookmarkBtn__area" class="btnId<%= @photo.id %>">
    <%= render 'bookmarks/bookmark_button', photo: @photo %>
    </div>
  </div>


  <% end %>

 </div>
</div>
<div class="row">
 <div class="col-sm-4">
   <div class="prof_image_wrapper">
     <div class="prof_image">
      <a href="<%= user_path(@user) %>"><img src="<%= @user.prof_image.prof_thumbnail.url %>"></a>
    </div>
    <div class="prof_text">
      <a href="<%= user_path(@user) %>"><%= @user[:name] %></a>
    </div>
  </div>
 </div>
 <div class="col-sm-8">
  <table id="show-table">
   <tr>
    <th>タイトル</th>
    <td><%= @photo[:title] %></td>
   </tr>
   <tr>
    <th>撮影日</th>
    <td><%= @photo[:day] %></td>
   </tr>
   <tr>
    <th>機材</th>
    <td><%= @photo[:equipment] %></td>
   </tr>
   <tr>
    <th>コメント</th>
    <td><%= @photo[:comment] %></td>
   </tr>
  </table>
  <div class="col-lg-2 offset-lg-10 postImgEditBtn">
  <% if current_user == @photo.user %>
   <%= link_to "修正", edit_photo_path, method: :get, class: 'btn btn-primary btn-block' %>
  <% end %>
 </div>

 </div>

</div>
