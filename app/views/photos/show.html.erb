<div class="row">
 <div class="col-sm-12">
  <img src="<%= @photo.image.url %>" style="width:100%">
  <div style="display:inline-block;"><%= render 'bookmarks/bookmark_button', photo: @photo %></div>
  <div style="display:inline-block;"><%= render 'goods/good_button', photo: @photo %></div>
  <% if current_user == @photo.user %>
   <p><%= link_to "編集", edit_photo_path, method: :get, class: 'btn btn-primary btn-block' %></p>
  <% end %>
 </div>
</div>
<div class="row">
 <div class="col-sm-4">
  <img src="<%= @user.prof_image.url %>" style="width:100%">
  <a href="<%= user_path(@user) %>">By <%= @user[:name] %></a>
 </div>
 <div class="col-sm-8">
  <table border="1" style="width:100%">
   <tr>
    <td>タイトル</td>
    <td><%= @photo[:title] %></td>
   </tr>
   <tr>
    <td>撮影日</td>
    <td><%= @photo[:day] %></td>
   </tr>
   <tr>
    <td>機材</td>
    <td><%= @photo[:equipment] %></td>
   </tr>
   <tr>
    <td>コメント</td>
    <td><%= @photo[:comment] %></td>
   </tr>
  </table>

  
  

 </div>
</div>

