<% if logged_in? %>
<div class="row">
  <div class="col-lg-8 offset-lg-2">
  <%= form_with(model: @photo, local:true) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>

      <img src="<%= @photo.image.url %>" style="width:100%;">
    <div class="form-group">
      <%= f.label :title, 'タイトル　※100文字以内' %>
      <%= f.text_field :title, class: 'form-control', value: @photo.title, maxlength:100, size:100 %>
    </div>
    <div class="form-group">
      <%= f.label :day, '撮影日' %>
      <%= f.date_field :day, class: 'form-control', value: @photo.day %>
    </div>
    <div class="form-group">
      <%= f.label :equipment, '機材　※50文字以内' %>
      <%= f.text_field :equipment, class: 'form-control', value: @photo.equipment, maxlength:50, size:50 %>
    </div>
    <div class="form-group">
      <%= f.label :comment, 'コメント　※255文字以内' %>
      <%= f.text_area :comment, class: 'form-control', value: @photo.comment, maxlength:255, row:6 %>
    </div>
    <div class="form-group col-lg-2 offset-lg-5">
    <%= f.submit '更新する' , class: 'btn btn-primary btn-block' %>
    </div>

  </div>
</div>
  <% end %>
<% end %>
