<% if logged_in? %>
<div class="row">
  <div class="col-sm-12">
  <%= form_with(model: @photo, local:true) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>

      <img src="<%= @photo.image.url %>" style="width:100%">
    <div class="form-group">
      <%= f.label :title, 'タイトル' %>
      <%= f.text_field :title, class: 'form-control', value: @photo.title %>
    </div>
    <div class="form-group">
      <%= f.label :day, '撮影日' %>
      <%= f.date_field :day, class: 'form-control', value: @photo.day %>
    </div>
    <div class="form-group">
      <%= f.label :equipment, '機材' %>
      <%= f.text_field :equipment, class: 'form-control', value: @photo.equipment %>
    </div>
    <div class="form-group">
      <%= f.label :comment, 'コメント' %>
      <%= f.text_field :comment, class: 'form-control', value: @photo.comment %>
    </div>

  </div>
</div>
    <%= f.submit '更新' , class: 'btn btn-primary btn-block' %>
  <% end %>
<% end %>
